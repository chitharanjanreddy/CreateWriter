# ========================================
# CreativeWriter Backend - Environment Variables
# ========================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/creativewriter
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/creativewriter

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# External API Keys (Admin Configurable)
# ========================================

# Anthropic Claude API
ANTHROPIC_API_KEY=

# Suno Music API
SUNO_API_KEY=

# Udio Music API
UDIO_API_KEY=

# HeyGen Video API
HEYGEN_API_KEY=

# ElevenLabs Voice API
ELEVENLABS_API_KEY=

# ========================================
# Default Admin Account (REQUIRED for production)
# ========================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=YourSecurePassword123!
ADMIN_NAME=Admin User

# ========================================
# Optional: Email Configuration (for password reset)
# ========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# FROM_EMAIL=noreply@akashinnotech.com
# FROM_NAME=CreativeWriter
